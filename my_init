
if [ "`ls -A /var/www/html`" = "" ]; \
then \
    mkdir -p /tmp/itop \
    && curl -SL -o /tmp/itop/itop.zip https://sourceforge.net/projects/itop/files/itop/$ITOP_VERSION/$ITOP_FILENAME \
    && unzip /tmp/itop/itop.zip -d /tmp/itop/ \
	  && mv /tmp/itop/web/* /var/www/html \
	  && rm -rf /tmp/itop; \
fi
